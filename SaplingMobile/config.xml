<?xml version='1.0' encoding='utf-8'?>
<widget id="zeroverse.sapling.mobilewallet" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ZeroVerse Wallet</name>
    <description>
        ZeroVerse Mobile Sapling Wallet.
    </description>
    <author email="zerocurrency@gmail.com" href="https://zero.directory">
        Team Zero
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="./src/assets/logo-black.png" />
        <allow-intent href="market:*" />
        <preference name="android-targetSdkVersion" value="26" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:networkSecurityConfig="@xml/network_security_config" />
            <application android:debuggable = "true" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="KeepRunning" value="true" />
</widget>
